{
    "classes": {
        "invertor": {
            "type": "text",
            "text-top": "Sensor",
            "tm-background-image": "sensor.png",
            "tm-text-background-color": "rgba(255, 255, 255, 0.3)",
            "tm-font-size": "16px",
            "tm-font-weight": "bold",
            "tm-shadow": true
        }
	},
    "dashboard1": {
        "name": "Dashboard",
        "tiles": [
            {
                "id":"consumption",
                "type": "text",
                "text-top": "Status",
                "text-middle": "pc_status${}",
                "text-bottom": "Consumption",
                "grid-x": 0,
                "grid-y": 0
            },
            {
                "id":"production",
                "type": "text",
                "text-top": "Status",
                "text-middle": "pp_status${}",
                "text-bottom": "Production",
                "grid-x": 1,
                "grid-y": 0
            },
            {
                "id":"import",
                "type": "text",
                "text-top": "Status",
                "text-middle": "pi_status${}",
                "text-bottom": "Import",
                "grid-x": 0,
                "grid-y": 1
            },
            {
                "id":"export",
                "type": "text",
                "text-top": "Status",
                "text-middle": "pe_status${}",
                "text-bottom": "Export",
                "grid-x": 1,
                "grid-y": 1
            },
            {
                "id":"actuator1",
                "type": "switch",
                "text-top": "Control",
                "text-bottom": "Relay 1",
                "value": "r1_force%{}",
                "text-middle": "r1_status${}",
                "grid-x": 0,
                "grid-y": 2
            },
            {
                "id":"actuator2",
                "type": "switch",
                "text-top": "Control",
                "text-bottom": "Relay 2",
                "value": "r2_force%{}",
                "text-middle": "r2_status${}",
                "grid-x": 1,
                "grid-y": 2
            },
            
            {
                "id":"chart1",
                "type": "donut",
                "grid-w": 4,
                "grid-h": 3,
                "grid-x": 2,
                "grid-y": 0,
                "text-top": "Daily Energy",
                "tt-font-size": "10px",
                "tt-color": "#fff",
                "tt-background-color": "#2c9bc8",
                "chart-colors": "#9b8579, #6bcb84, #ff0000, #f8c935, #7A92A3",
                "chart-text-color": "#ff0000",
                "chart-data": {
                    "Consumption kWh":"d_EC{0.0}",
                    "Production kWh":"d_EP{0.0}",
                    "Import kWh":"d_EI{0.0}",
                    "Export kWh":"d_EE{0.0}"
                }
            },
            {
                "id":"chart2",
                "type": "donut",
                "grid-w": 4,
                "grid-h": 3,
                "grid-x": 6,
                "grid-y": 0,
                "text-top": "Monthly Energy",
                "tt-font-size": "10px",
                "tt-color": "#fff",
                "tt-background-color": "#2c9bc8",
                "chart-colors": "#9b8579, #6bcb84, #ff0000, #f8c935, #7A92A3",
                "chart-text-color": "#ff0000",
                "chart-data": {
                    "Consumption kWh":"m_EC{0.0}",
                    "Production kWh":"m_EP{0.0}",
                    "Import kWh":"m_EI{0.0}",
                    "Export kWh":"m_EE{0.0}"
                }
            }
			]
    }
